{
  "name": "@deskpro/apps-sdk",
  "version": "0.7.2",
  "description": "core component of deskpro apps sdk",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "format": "prettier --write \"{src,test}/**/*.js\"",
    "format:check": "prettier --list-different \"{src,test}/**/*.js\"",
    "lint": "eslint src test build",
    "test": "cross-env NODE_ENV=test BABEL_ENV=test jest",
    "dev": "cross-env NODE_ENV=production babel --watch ./src --out-dir ./lib --ignore *.test.js",
    "build": "npm run build-lib && npm run build-docs",
    "build-lib": "cross-env NODE_ENV=production babel ./src --out-dir ./lib --ignore *.test.js",
    "build-docs": "DOCS='./target/docs/reference'; rm -rf ${DOCS}/* && jsdoc --configure ./.jsdoc --destination ${DOCS} --verbose",
    "prepare": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deskpro/apps-sdk-core.git"
  },
  "keywords": [
    "deskpro",
    "deskpro apps",
    "deskpro sdk"
  ],
  "author": "Deskpro Ltd.",
  "license": "BSD-3-Clause",
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "dependencies": {
    "element-resize-detector": "^1.1.12",
    "eventemitter3": "2.0.3",
    "get-size": "^2.0.2",
    "invariant": "^2.2.4",
    "post-robot": "^7.0.8",
    "query-string": "^6.1.0",
    "warning": "^4.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.4",
    "docdash": "^0.4.0",
    "eslint": "^4.19.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.46.2",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "glob": "^7.1.1",
    "jest": "^22.4.3",
    "jsdoc": "^3.5.5",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "testRegex": "(/test/.*\\.test.js)$",
    "testURL": "http://localhost"
  }
}
